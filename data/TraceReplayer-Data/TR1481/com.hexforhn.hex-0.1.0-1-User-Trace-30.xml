led="true" focusable="true" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[10,343][147,454]" /><node index="1" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[42,378][1039,456]"><node index="0" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Indie Microblogging" checkable="false" checked="false" clickable="true" enabled="true" focusable="true" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[304,380][777,451]" /></node><node index="2" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="What is microblogging?" checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[42,624][1039,693]" /><node index="3" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="“The most valuable of all talents is that of never using two words when one will do.”" checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[42,735][1039,903]" /><node index="4" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="— Thomas Jefferson" checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[42,903][1039,966]" /><node index="5" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="In her 2002 book The Weblog Handbook, Rebecca Blood introduced readers to the growing niche of web sites that focused on chronological posts. She wrote about what made a blog different:" checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[42,1029][1039,1281]" /><node index="6" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[42,1323][1039,1794]"><node index="0" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="No one wants to scroll down to the bottom of the page (or even the current day’s section) to see if any new content has been posted. With new content at the top, a visitor can see at a glance whether your page has been updated and easily begin reading your latest entries without any additional effort." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[94,1344][997,1785]" /></node><node index="7" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Spelling it out seems obvious today. We can similarly outline what microblogging is in a way that hopefully will be obvious years from now when indie microblogging is more common." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="8" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="We can approach defining the term microblogging from two sides: specific rules etc, and high level goals, the spirit of indie microblogging that all blogs can share even when the details vary." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="9" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Wikipedia defines microblogging this way:" checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="10" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]"><node index="0" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Microblogging is a broadcast medium that exists in the form of blogging. A microblog differs from a traditional blog in that its content is typically smaller in both actual and aggregated file size." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /></node><node index="11" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="But that’s not quite specific enough. A microblog post should have these qualities:" checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="12" text="" resource-id="" class="android.widget.ListView" package="com.hexforhn.hex" content-desc="" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]"><node index="0" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Should have a feed, usually RSS or JSON Feed" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]"><node index="0" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="•" checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="1" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Should have a feed, usually RSS or JSON Feed" checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /></node><node index="1" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Does not have an RSS item title." checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]"><node index="0" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="•" checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="1" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Does not have an RSS item title." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /></node><node index="2" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Contains short post text, usually 280 characters or less." checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]"><node index="0" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="•" checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="1" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Contains short post text, usually 280 characters or less." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /></node></node><node index="13" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Not having an RSS item title might take some getting used to for mainstream blogging clients and readers. Most RSS apps assume that all posts have a title, even though titles are technically optional in the spec. But I think this is an important distinction because if you think about Twitter-like posting, it should be fast and convenient; making up a title first interrupts the flow of posting." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="14" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="The specific rule for post length or which feeds you include can be useful. These should be thought of as more of a guideline than a rule, though — just something to shoot for." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="15" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="We focus on microblogging because it’s the easiest form of web publishing. Centralized services like Twitter and Facebook took off because they had better, simpler interfaces." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="16" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="If you stop reading after this page, here’s what you need to know:" checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="17" text="" resource-id="" class="android.widget.ListView" package="com.hexforhn.hex" content-desc="" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]"><node index="0" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Publish short posts and photos to your own web site, at your own personal domain name." checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]"><node index="0" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="•" checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="1" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Publish short posts and photos to your own web site, at your own personal domain name." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /></node><node index="1" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Make sure your web site has an RSS or JSON feed, and add it to communities like Micro.blog." checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]"><node index="0" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="•" checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="1" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Make sure your web site has an RSS or JSON feed, and add it to communities like Micro.blog." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /></node><node index="2" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="If you want to participate in larger social networks, post to your own site first and then copy the post to Twitter, Facebook, or Instagram." checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]"><node index="0" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="•" checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="1" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="If you want to participate in larger social networks, post to your own site first and then copy the post to Twitter, Facebook, or Instagram." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /></node><node index="3" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Massive centralized platforms create problems for society. By posting to your own site, you control your content, distributing it more evenly across the web and minimizing the power of big tech companies." checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]"><node index="0" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="•" checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="1" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Massive centralized platforms create problems for society. By posting to your own site, you control your content, distributing it more evenly across the web and minimizing the power of big tech companies." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /></node></node><node index="18" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="This might seem like too much work for most people. With many of today’s blogging tools, it is. We must work simultaneously on open standards and on making software that follows those standards as easy to use as possible for everyone." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="19" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="What we don’t want to do is reinvent the wheel with a new social media-like protocol that isn’t rooted in the web and blogs. Others have tried to come up with new systems for microblogging that don’t use blogs. But the word “blog” is part of “microblog” for a reason. They differ only in length. By using blogs, we get to keep everything that is valuable about blogging. We get to keep existing blog software and IndieWeb-friendly formats." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="20" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Blogs are web sites with reverse-chronological posts written by people. The newest posts are always at the top of the web site. They can be news sites, corporate sites, travel sites, photo sites, tech sites. They are often personal, with an individual’s voice. Readers want to keep visiting a blog because there’s a story, unfolding with each post. The passing of time is a fundamental element to what defines a blog." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="21" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="This emphasis on time is even more obvious for microblogs. Microblogs are blogs with very short posts. Because short posts are easy to write, there are usually more of them. In the case of a microblogging service like Twitter or Micro.blog, friends' posts are combined together in a timeline." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="22" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="In an open platform based on indie microblogs, posts in the timeline come from blogs at the author’s own domain name. This helps distribute content across the web and bypasses the bottleneck of posting only through big social networks, reducing their influence:" checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="23" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Recent posts are placed at the top of the timeline. Older posts fall to the bottom, and eventually drop off. With this focus on the new, some people consider microblogging ephemeral, but it doesn’t have to be." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="24" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Indie microblogging is about taking ownership of our microblog post content. It’s about reclaiming the definition of what a microblog is from Twitter. Microblogs and social networks are big components of the web — too important to be contained in such a small number of closed, centralized platforms." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="25" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="An indie microblog is a blog that contains short posts at your own domain name. It can be hosted by multiple providers, but it is conceptually independent of any one platform. It’s portable and you control it." checkable="false" checked="false" clickable="true" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /><node index="26" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]"><node index="0" text="" resource-id="" class="android.view.View" package="com.hexforhn.hex" content-desc="Next: Uses for a microblog →" checkable="false" checked="false" clickable="true" enabled="true" focusable="true" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /></node></node></node></node></node></node></node></node></node></node></node><node index="1" text="" resource-id="android:id/statusBarBackground" class="android.view.View" package="com.hexforhn.hex" content-desc="" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][1080,63]" /><node index="2" text="" resource-id="android:id/navigationBarBackground" class="android.view.View" package="com.hexforhn.hex" content-desc="" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" selected="false" bounds="[0,0][0,0]" /></node></hierarchy>